
<ProfileScreen>:

    BgLabel:
        #background_color: 226/255, 226/255, 133/255, 1
        background_color: 244/255, 244/255, 244/255, 1
        size_hint: 1, 1
        pos_hint: {'right': 1, 'y': 0}

    Label:
        id: id_profile
        text: 'ID: ' + root.parent.__str__()
        #rgba(166, 166, 166, 1)'
        pos_hint: {'center_x': .5, 'y': .68}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 21
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'


    BgCanvas:
        canvas:
            Rectangle:
                pos: self.width * 0.05, self.height * 0.47
                size: self.width * 0.9, self.height * 0.25

    #este muestra tu nombre completo como usuario

    TextInput:
        id: name_profile
        text: root.parent.__str__()
        foreground_color: 84/255, 84/255, 84/255, 1
        readonly: True  # Esta propiedad desactiva la edición del TextInput
        pos_hint: {'x': .1, 'y': .6}
        size_hint: None, None
        size: '350dp', '31dp'
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        background_normal: 'imagenes_Demeter/Elements-Various/TextInput-BorderGray.png'
        background_active: 'imagenes_Demeter/Elements-Various/TextInput-BorderGray.png'
        background_disabled: True  # Desactiva el fondo interactivo
        multiline: False  # Desactiva la interacción táctil
        on_touch_down: self.focus = False
        cursor_blink: False #Desactiva el parpadeo del cursor
        cursor_color: 0, 0, 0, 0 #lo vuelve con cero de opacidad de color blanco

    Label:

        text: 'Nombre Apellidos'
        pos_hint: {'x': .14, 'y': .6}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 20
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

    #Este es el que muestra tu correo como usuario

    TextInput:
        id: mail_profile
        text: root.parent.__str__()
        foreground_color: 84/255, 84/255, 84/255, 1
        readonly: True  # Esta propiedad desactiva la edición del TextInput
        pos_hint: {'x': .1, 'y': .49}
        size_hint: None, None
        size: '350dp', '31dp'
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        background_normal: 'imagenes_Demeter/Elements-Various/TextInput-BorderGray.png'
        background_active: 'imagenes_Demeter/Elements-Various/TextInput-BorderGray.png'
        background_disabled: True  # Desactiva el fondo interactivo
        multiline: False  # Desactiva la interacción táctil
        on_touch_down: self.focus = False
        cursor_blink: False #Desactiva el parpadeo del cursor
        cursor_color: 0, 0, 0, 0 #lo vuelve con cero de opacidad de color blanco

    Label:
        text: 'Correo'
        pos_hint: {'x': .08, 'y': .49}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 20
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'


    #opciones
    BgCanvas:
        canvas:
            Rectangle:
                pos: self.width * 0.05, self.height * 0.05
                size: self.width * 0.9, self.height * 0.4


    Label:
        text: '[b]AJUSTES[/b]'
        markup: True
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .07, 'y': .31}
        size_hint: None, None
        color: 166/255, 166/255, 166/255, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

    Label:
        id: Reset_profile
        text: 'Cambiar contraseña'
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .13, 'y': .265}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        on_touch_up: app.root.handle_touch('Reset-profile', 'Reset', *args) if self.collide_point(*args[1].pos) else None


    Label:
        text: 'Borrar Caché'
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .09, 'y': .22 }
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'


    Label:
        text: '[b]INFORMACION[/b]'
        markup: True
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .1, 'y': .15}
        size_hint: None, None
        color: 166/255, 166/255, 166/255, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

    Label:
        text: 'Ayuda'
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .051, 'y': .1}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

    Label:
        id: version-view
        text: 'Versión de aplicacion'
        #rgba(166, 166, 166, 1)'
        pos_hint: {'x': .13, 'y': .05}
        size_hint: None, None
        color: 0, 0, 0, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        on_touch_up: root.parent.parent.parent.handle_touch('version-view', 'Version', *args) if self.collide_point(*args[1].pos) else None

    Label:
        id: 'cerrarsesion'
        text: 'Cerrar sesion'
        #rgba(255, 49, 49, 1)
        pos_hint: {'x': .09, 'y': .005}
        size_hint: None, None
        color: 255/255, 49/255, 49/255, 1
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        on_touch_up: app.root.pop_to_label('login', 'cerrarsesion') if self.collide_point(*args[1].pos) else None

