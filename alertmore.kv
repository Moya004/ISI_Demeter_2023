<AlertMoreScreen>:
    FloatLayout:
        BgLabel:
            #background_color: 244/255, 244/255, 244/255, 1
            #provisonal mientras ubico los canvas blancos
            #background_color: 226/255, 226/255, 133/255, 1
            size_hint: 1, 1
            pos_hint: {'right': 1, 'y': 0}


        Label:
            text: 'DETALLES DE ALERTAS'
            pos_hint: {'center_x': .5, 'top': 1}
            size_hint: None, None
            color: 0, 0, 0, 1
            font_size: 20
            font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'


        Button:
            # Usa una imagen como background del bot√≥n
            background_normal: 'imagenes_Demeter/Elements-Various/flecha.png'
            background_down: 'imagenes_Demeter/Elements-Various/flecha.png'
            pos_hint: {'x': .9, 'y': .01}
            size_hint: None, None
            size: '70dp', '70dp'
            on_press: root.parent.parent.parent.switch_content('Alerts')

    ScrollView:
        pos_hint: {'center_x': .5, 'y': 0.05}
        size_hint: None, None
        size: dp(600), dp(500)
        do_scroll_x: False

        Label:
            id: to_display
            text: ''
            color: 0, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
            halign: 'center'

