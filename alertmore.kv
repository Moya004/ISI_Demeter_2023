<AlertMoreScreen>:
    FloatLayout:
        BgLabel:
            #background_color: 244/255, 244/255, 244/255, 1
            #provisonal mientras ubico los canvas blancos
            #background_color: 226/255, 226/255, 133/255, 1

            size_hint: 1, 1
            pos_hint: {'right': 1, 'y': 0}

        Button:
            # Usa una imagen como background del botón
            background_normal: 'imagenes_Demeter/Elements-Various/flecha.png'
            background_down: 'imagenes_Demeter/Elements-Various/flecha.png'
            pos_hint: {'x': .9, 'y': .01}
            size_hint: None, None
            size: '70dp', '70dp'
            on_press: root.parent.parent.parent.switch_content('Alerts')

        Label:
            id: to_display
            text: ''
            pos_hint: {'x': .5, 'y': .7}
            size_hint: None, None
            size: '200dp', '40dp'
            color: 0, 0, 0, 1
            font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

        Label:
            id: selected_month_label
            text: 'Seleccione el mes'
            pos_hint: {'x': .575, 'y': .835}
            size_hint: None, None
            size: '200dp', '40dp'
            color: 244/255, 244/255, 244/255, 1
            font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'

        DropDown_Mes3:
        DropDown_Year3:


