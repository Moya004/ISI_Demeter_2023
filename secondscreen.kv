#:import Menu_BarAux Menu_BarAux


<SecondScreen>:
    BoxLayout:
        orientation: 'horizontal'

        MenuBar:
            size_hint: None, 1
            size: '70dp' , '0dp'

        ScreenManager:

            id: content_manager
            name: 'manager'

            HomeScreen:
                name: 'Home'

            AlertScreen:
                name: 'Alerts'
                on_pre_enter: self.load()


            AlertMoreScreen:
                name: 'AlertsMore'
                on_pre_enter: self.display()
                on_pre_leave: self.unload()

            AnalysisScreen:
                name: 'Analysis'
                on_pre_enter: self.load()
                on_pre_leave: self.unload()

            GraphicScreen:
                name: 'Statistics'


            SearchScreen:
                name: 'Search'
                on_pre_enter: self.load()
                on_pre_leave: self.unload()

            ProfileScreen:
                name: 'Profile'
                on_pre_enter: self.show()

            VersionScreen:
                name: 'Version'
