
<LogInLayout>:

    #aqui añadi la imagen banner que ocupa el .25 de la pantalla
    Image:
        source: 'imagenes_Demeter/pictures/Banner-login.png'
        #uso esto para que ocupe la pantalla completa y se va redimensionando conforme altero la ventana
        allow_stretch: True
        keep_ratio: False
        size_hint: 1, 0.25
        pos_hint: {'x': 0, 'top': 1}

    #el resto de la pantalla que es el .75 lo ocupa los botones y otros elementos
    BgLabel:
        size_hint: 1, 0.75
        pos_hint: {'x': 0, 'y': 0}

    Label:
        text: 'BIENVENIDO A\nDEMETER'
        pos_hint: {'x': .07 , 'y': .52}
        size_hint: None, None
        size: '100dp', '150dp'
        color: 0, 0, 0, 1
        #Defini la fuente y el tamaño de la misma
        font_size: 27
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    Label:
        text: 'Identificacion'
        pos_hint: {'x':.025, 'y': .45}
        size_hint: None, None
        size: '100dp', '100dp'
        color: 0, 0, 0, 1
        #Defini la fuente y el tamaño de la misma
        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    TextInput:
        id: UserText
        hint_text: "Ingrese su usuario"
        pos_hint: {'x':.025, 'y': .44}
        size_hint: None, None
        size: '200dp', '30dp'
        multiline: False

        #Para cambiar los bordes toca hacer cargando una imgen del tamño que lo definimos en el size desde photoshop
        background_normal: 'imagenes_Demeter/Elements-Various/TextInput-Border.png'

        #El estado normal del TextInput es diferente al activo por lo tanto secarga la misma imagen para que mantenga
        #el estilo
        background_active: 'imagenes_Demeter/Elements-Various/TextInput-Border.png'
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    Label:
        text: 'Contraseña'
        pos_hint: {'x': .02, 'y': .3}
        size_hint: None, None
        size: '100dp', '100dp'
        color: 0, 0, 0, 1

        #Defini la fuente y el tamaño de la misma

        font_size: 17
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    TextInput:
        id: PassText
        hint_text: "Ingrese su contraseña"
        pos_hint: {'x':.025, 'y': .29}
        size_hint: None, None
        size: '200dp', '30dp'
        multiline: False
        password: True
        #Para cambiar los bordes toca hacer cargando una imgen del tamño que lo definimos en el size desde photoshop
        background_normal: 'imagenes_Demeter/Elements-Various/TextInput-Border.png'

        #El estado normal del TextInput es diferente al activo por lo tanto secarga la misma imagen para que mantenga
        #el estilo
        background_active: 'imagenes_Demeter/Elements-Various/TextInput-Border.png'

        #Estoy cambiando la fuente en este fragmento
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    Button:
        text: 'Ingresar'
        pos_hint: {'x':.025, 'y': .21}
        size_hint: None, None
        size: '200dp', '30dp'
        #Aqui estoy desactivando el color normal del boton
        background_normal: ''
        #tambien desactive el color que toma al activarse
        background_down: ''
        #Este es para definir el color del boton
        background_color: 118/255.0, 163/255.0, 79/255.0, 1
        #Defini la fuente y deje el tamaño por defecto
        font_name: 'font/louis_george_cafe/Louis George Cafe Bold.ttf'
        #on_press: root.parent.parent.push("SecondScreen")
        #Estaras en comentarios provisionalmente
        on_press: root.login_click(UserText.text, PassText.text)

    Label:
        id: LabelCredenciales
        text: 'Credenciales incorrectas'
        pos_hint: {'x': 0.05, 'y': .07}
        size_hint: None, None
        size: '100dp', '100dp'
        color: 1, 1, 1, 1
        font_size: 14
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'

    #aqui añadi la opcion cambiar de contraseña
    #[u][/u] es para que el texto aparezca con la raya abajo
    Label:
        id: 'Label_Reset'
        text: '[u]Olvidaste tu contraseña[/u]'
        #lo de [u][/u] se activa con esto, en caso contrario saldria el [u][/u] como un texto
        markup: True
        pos_hint: {'x': .08 , 'y': .05}
        size_hint: None, None
        size: '50dp', '50dp'
        color: 0, 0, 0, 1
        #defini tipografia y tamaño
        font_size: 12
        font_name: 'font/louis_george_cafe/Louis George Cafe.ttf'
        #Redirecciona a una ventana a la cual se le pasa el nombre y tambien recibe el id del label de la accion
        on_touch_up: app.root.handle_touch('Label_Reset', 'Reset', *args) if self.collide_point(*args[1].pos) else None

<BackgroundColor>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

